{
  "default": {
    "paths": [
      "src/tests/features/**/*.feature"
    ],
    "dryRun": false,
    "parallel": 3,
    "format": [
      "progress-bar",
      "summary",
      "json:reports/cucumber-report.json",
      "html:reports/cucumber-report.html"
    ],
    "formatOptions": {
      "colorsEnabled": true,
      "snippetInterface": "async-await"
    },
    "require": [
      "src/tests/step-definitions/**/*.ts",
      "src/support/**/*ts"
    ],
    "requireModule": [
      "ts-node/register"
    ]
  }
}